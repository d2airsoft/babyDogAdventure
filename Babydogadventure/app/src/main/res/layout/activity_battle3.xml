<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".battle"
    android:orientation="horizontal"
    android:weightSum="10"
    >
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/bossbackground"
                    android:weightSum="10"
                    >
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:weightSum="10"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/enemyname1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingTop="5dp"
                                    android:text= "Super Jonathan"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="6">
                                <FrameLayout
                                    android:id="@+id/enemy1"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/j_normal"

                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/enemyhp1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingTop="5dp"
                                    android:text= "HP: 100"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp" />

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:weightSum="6"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1">

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="5">
                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"></RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.71">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:text="Roundscore = 0 "
                                            android:textSize="20sp"
                                            android:textColor="@color/yellow"

                                            android:id="@+id/roundScore"
                                            android:layout_gravity="center"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true" />


                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>




                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="0.5">

                                <TextView
                                    android:id="@+id/turn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:text= "Player Turn"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1.5">
                                <TextView
                                    android:id="@+id/round"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingTop="5dp"
                                    android:text= "round: 0"
                                    android:textColor="@color/yellow"
                                    android:textSize="25sp" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    >
                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"></RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">
                                        <FrameLayout
                                            android:id="@+id/die1"
                                            android:layout_width="150dp"
                                            android:layout_height="150dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:background="@drawable/die_face_1" />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"></RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">
                                        <FrameLayout
                                            android:id="@+id/die2"
                                            android:layout_width="150dp"
                                            android:layout_height="150dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:background="@drawable/die_face_1" />
                                    </RelativeLayout>
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:weightSum="10"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/enemyname2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingTop="5dp"
                                    android:text= "Sargent Baby"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="6">
                                <FrameLayout
                                    android:id="@+id/enemy2"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/d_normal"

                                    />
                                <!--android:background="" />-->
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/enemyhp2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingTop="5dp"
                                    android:text= "HP: 100"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp" />

                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>





                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:background="@color/green"
                    >

                    <TextView
                        android:id="@+id/msg1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/msg2"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:text=""
                        />


                    <Button
                        android:id="@+id/hold"
                        android:layout_weight="1.5"

                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"

                        android:background="@drawable/large_button"

                        android:text="Hold"
                        android:textColor="@color/yellow"
                        />

                    <TextView

                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:text=""
                        />
                </LinearLayout>



            </RelativeLayout>





        </LinearLayout>





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"

                    >

                    <FrameLayout
                        android:id="@+id/player"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/d_draw"


                        />


                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:background="@color/pink"
                    >
                    <TextView
                        android:id="@+id/bar1"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="M.Sargent Baby."
                        />

                    <TextView
                        android:id="@+id/bar2"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="Hp:"
                        />
                    <TextView
                        android:id="@+id/bar3"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="Level:"
                        />
                    <TextView
                        android:id="@+id/bar4"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="gold:"
                        />

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2">
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    android:background="@drawable/large_button"

                    android:text="@string/roll"
                    android:textColor="@color/yellow"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>



        </LinearLayout>





    </RelativeLayout>



</LinearLayout>