<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".battle"
    android:orientation="horizontal"
    android:weightSum="10"
    >
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/green"
                    android:weightSum="10"
                    >

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3.3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:weightSum="8"
                            android:id="@+id/fuck">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="6"
                                android:id="@+id/fuck_1">

                                <Button
                                    android:id="@+id/card1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="Card 1"
                                    android:background="@drawable/card"

                                    />



                                <!--android:background="" />-->
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:weightSum="8"
                            android:id="@+id/fuck2">



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="6"
                                android:id="@+id/fuck2_1">

                                <Button
                                    android:id="@+id/card2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Card 2"
                                    android:background="@drawable/card"
                                    />



                                <!--android:background="" />-->
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3.2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:weightSum="8"
                            android:id="@+id/fuck3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="6"
                                android:id="@+id/fuck3_1">

                                <Button
                                    android:id="@+id/card3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="Card 3"
                                    android:background="@drawable/card"

                                    />



                                <!--android:background="" />-->
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>





                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2">


            </RelativeLayout>





        </LinearLayout>





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"

                    >

                    <FrameLayout
                        android:id="@+id/player"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/d_draw"


                        />


                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:background="@color/pink"
                    >
                    <TextView
                        android:id="@+id/bar1"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="M.Sargent Baby."
                        />

                    <TextView
                        android:id="@+id/bar2"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="Hp:"
                        />
                    <TextView
                        android:id="@+id/bar3"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="Level:"
                        />
                    <TextView
                        android:id="@+id/bar4"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="gold:"
                        />

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </RelativeLayout>



        </LinearLayout>





    </RelativeLayout>



</LinearLayout>
